doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='theme-color', content='#fff')
        meta(property='og:title', content='InstagramStalk')
        meta(property='og:description', content='InstagramStalk')
        meta(property='og:type', content='website')
        meta(property='og:url', content='http://www.instagramstalk.tk')
        meta(property='og:image', content='http://www.instagramstalk.tk/images/og-image.jpg')
        title InstagramStalk
        link(rel='icon', type='image/png', href='/images/favicon.png')
        link(type='text/css', rel='stylesheet', href='/styles/main.css')
        link(type='text/css', rel='stylesheet', href='/styles/mobile.css')
        script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js')
        script(type='text/javascript', src='/scripts/options.js')
        script(type='text/javascript', src='/scripts/preview-recent.js')
        script(type='text/javascript', src='/scripts/new-posts.js')
        script(type='text/javascript', src='/scripts/search.js')
        script(type='text/javascript') window.ctx = !{JSON.stringify(ctx)}
    body
        main
            header
                .container
                    a(href='/')
                        img.logo(src='/images/logo.svg', width='173', height='40')
                    a(href='update.php')
                        img.update(src='images/update.svg', width='30', height='30')
                    input.search(type='text', placeholder='Search')
            .thumbs.container
                each user in users
                    .thumb(data-user=user.username)
                        .profile-pic
                            a(target='_blank', href=user.profile_url)
                                img.profile-pic-img(src=user.profile_pic_url, alt=user.username)
                            a(target='_blank', href=user.profile_pic_zoom_url)
                                img.zoom-in-img(src='/images/zoom-in.svg', width='20', height='20')
                        .opt
                            ul
                                li
                                    a(href='#edit') Edit
                                li
                                    a(href='#remove') Remove
                        p.username
                            a(href=user.profile_url, target="_blank") @#{user.username}
                        p.posts-count #{user.media.count} posts
                        p.name #{user.name}
                        p.bio #{user.biography}
                        .media-json(data-media=JSON.stringify(user.media), hidden)
                        if !user.is_private
                            .show-posts
